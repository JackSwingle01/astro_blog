---
export interface Props {
    title: string;
    content: string;
    userId: string;
    headerImage?: string;
}

const { title, content,userId } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div class="post">
            <h1>{title}</h1>
            <h3>By: {userId}</h3>
            <p>Content: {content}</p>
            <slot />
        </div>
    </body>
</html>

